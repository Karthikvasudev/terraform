[
	{
		"name": "nginx",
		"image": "nginx:alpine",
		"essential": true,	
		"portMappings": [
			{
				"containerPort": 80,
				"hostPort": 8001
			}
		],
		"links": [
			"confluence"
		],
		"mountPoints": [
			{
				"sourceVolume": "nginx-config",
				"containerPath": "/etc/nginx/nginx.conf"
			}
		],
		"logConfiguration": {
				"logDriver": "awslogs",
				"options": {
					"awslogs-group": "aip-adm-confluence-logs",
					"awslogs-region": "us-east-1"
				}
			},
		"memory": 256,
		"cpu": 100
	},
	{
		"name": "confluence",
		"image": "596978647277.dkr.ecr.us-east-1.amazonaws.com/add/atlassian-sso-confluence:latest",
		"links": [
			"postgres"
		],
		"mountPoints": [
			{
				"sourceVolume": "app-volume",
				"containerPath": "/var/atlassian/confluence"
			},
			{
				"sourceVolume": "sso-config",
				"containerPath": "/opt/atlassian/confluence/confluence/WEB-INF/classes/seraph-config.xml"
			},
			{
				"sourceVolume": "crowd-config",
				"containerPath": "/opt/atlassian/confluence/confluence/WEB-INF/classes/crowd.properties"
			}
		],
		"environment": [
			{
				"name" : "CONF_INSTALL",
				"value" : "/opt/atlassian/confluence/"
			},
			{
				"name" : "X_PROXY_NAME",
				"value" : "confluence.aipadmin.com"
			},
			{
				"name" : "X_PROXY_PORT",
				"value" : "443"
			},
			{
				"name" : "X_PROXY_SCHEME",
				"value" : "https"
			},
			{
				"name" : "X_PATH",
				"value" : "/"
			}
		],		
		"user": "root",
		"logConfiguration": {
				"logDriver": "awslogs",
				"options": {
					"awslogs-group": "aip-adm-confluence-logs",
					"awslogs-region": "us-east-1"
				}
			},
		"cpu": 512,
		"memory": 2048,
		"essential": true
	},
	{
		"name": "postgres",
		"image": "postgres:9.3",
		"essential": true,	
		"environment": [
			{
				"name" : "POSTGRES_USER",
				"value" : "pgadmin"
			},
			{
				"name" : "POSTGRES_PASSWORD",
				"value" : "password"
			},
			{
				"name" : "PGDATA",
				"value" : "/var/lib/postgresql/data/pgdata"
			},
			{
				"name" : "POSTGRES_DB",
				"value" : "confluencedb"
			}
		],
		"mountPoints": [
			{
				"sourceVolume": "app-volume",
				"containerPath": "/var/lib/postgresql/data"
			}
		],		
		"logConfiguration": {
				"logDriver": "awslogs",
				"options": {
					"awslogs-group": "aip-adm-confluence-logs",
					"awslogs-region": "us-east-1"
				}
			},
		"memory": 750,
		"cpu": 100
	},
	{
		"name": "dockup-pgdump",
		"image": "596978647277.dkr.ecr.us-east-1.amazonaws.com/add/atlassian-dockup-pgdump:latest",
		"essential": true,
		"links": [
			"postgres"
		],
		"environment": [
			{
				"name" : "PGDUMP_OPTIONS",
				"value" : "-Fc --no-acl --no-owner"
			},
			{
				"name" : "PGDUMP_DATABASE",
				"value" : "confluencedb"
			},
			{
				"name" : "POSTGRES_ENV_POSTGRES_USER",
				"value" : "pgadmin"
			},
			{
				"name" : "POSTGRES_ENV_POSTGRES_PASSWORD",
				"value" : "password"
			},
			{
				"name" : "POSTGRES_PORT_5432_TCP_ADDR",
				"value" : "postgres"
			},
			{
				"name" : "POSTGRES_PORT_5432_TCP_PORT",
				"value" : "5432"
			},
			{
				"name" : "AWS_BUCKET",
				"value" : "aip-adm-s3-app-data-us-east-1-596978647277"
			},
			{
				"name" : "PREFIX",
				"value" : "backups/adm/pgdump/confluence"
			},
			{
				"name" : "CRON_TIME",
				"value" : "00 5 * * *"
			}
		],
		"logConfiguration": {
				"logDriver": "awslogs",
				"options": {
					"awslogs-group": "aip-adm-confluence-logs",
					"awslogs-region": "us-east-1"
				}
			},
		"memory": 256,
		"cpu": 100
	},
	{
		"name": "dockeup-data",
		"image": "596978647277.dkr.ecr.us-east-1.amazonaws.com/add/atlassian-dockup-data:latest",
		"essential": true,
		"mountPoints": [
			{
				"sourceVolume": "app-volume",
				"containerPath": "/opt/aip/aip-adm-confluence"
			}
		],
		"environment": [
			{
				"name" : "BACKUP_NAME",
				"value" : "confluence"
			},
			{
				"name" : "BACKUP_TAR_OPTION",
				"value" : "/opt/aip/aip-adm-confluence/*"
			},
			{
				"name" : "AWS_REGION",
				"value" : "us-east-1"
			},
			{
				"name" : "AWS_BUCKET",
				"value" : "aip-adm-s3-app-data-us-east-1-596978647277"
			},
			{
				"name" : "PREFIX",
				"value" : "backups/adm/data/confluence"
			},
			{
				"name" : "CRON_TIME",
				"value" : "00 5 * * *"
			}
		],
		"logConfiguration": {
				"logDriver": "awslogs",
				"options": {
					"awslogs-group": "aip-adm-confluence-logs",
					"awslogs-region": "us-east-1"
				}
			},
		"memory": 256,
		"cpu": 100
	}
]
