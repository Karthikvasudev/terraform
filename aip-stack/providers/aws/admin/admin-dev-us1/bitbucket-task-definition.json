[
	{
		"name": "nginx",
		"image": "nginx:alpine",
		"essential": true,	
		"portMappings": [
			{
				"containerPort": 80,
				"hostPort": 8002
			}
		],
		"links": [
			"bitbucket"
		],
		"mountPoints": [
			{
				"sourceVolume": "nginx-config",
				"containerPath": "/etc/nginx/nginx.conf"
			}
		],
		"logConfiguration": {
				"logDriver": "awslogs",
				"options": {
					"awslogs-group": "aip-adm-bitbucket-logs",
					"awslogs-region": "us-east-1"
				}
			},
		"memory": 256,
		"cpu": 100
	},
	{
		"name": "bitbucket",
		"image": "cptactionhank/atlassian-bitbucket:4.7.1",	
		"links": [
			"postgres"
		],
		"mountPoints": [
			{
				"sourceVolume": "app-volume",
				"containerPath": "/var/atlassian/bitbucket"
			}
		],
		"environment": [
			{
				"name" : "BITBUCKET_INSTALL",
				"value" : "/opt/atlassian/bitbucket/"
			},
			{
				"name" : "X_PROXY_NAME",
				"value" : "bitbucket.aipadmin.com"
			},
			{
				"name" : "X_PROXY_PORT",
				"value" : "443"
			},
			{
				"name" : "X_PROXY_SCHEME",
				"value" : "https"
			},
			{
				"name" : "X_PATH",
				"value" : "/"
			}
		],		
		"user": "root",
		"logConfiguration": {
				"logDriver": "awslogs",
				"options": {
					"awslogs-group": "aip-adm-bitbucket-logs",
					"awslogs-region": "us-east-1"
				}
			},
		"cpu": 512,
		"memory": 2024,
		"essential": true
	},
	{
		"name": "postgres",
		"image": "postgres:9.3",
		"essential": true,	
		"environment": [
			{
				"name" : "POSTGRES_USER",
				"value" : "pgadmin"
			},
			{
				"name" : "POSTGRES_PASSWORD",
				"value" : "password"
			},
			{
				"name" : "PGDATA",
				"value" : "/var/lib/postgresql/data/pgdata"
			},
			{
				"name" : "POSTGRES_DB",
				"value" : "bitbucketdb"
			}
		],
		"mountPoints": [
			{
				"sourceVolume": "app-volume",
				"containerPath": "/var/lib/postgresql/data"
			}
		],		
		"logConfiguration": {
				"logDriver": "awslogs",
				"options": {
					"awslogs-group": "aip-adm-bitbucket-logs",
					"awslogs-region": "us-east-1"
				}
			},
		"memory": 750,
		"cpu": 100
	}
]