{
    "AWSTemplateFormatVersion": "2010-09-09",

    "Description": "aip-cloudfront.cfn.json",
    "Description": "This template defines the CloudFront configuration",

    "Mappings" : {
        "EnvMap" : {
          "devops"    : { "IsProdLike" : "false"},
          "dev"       : { "IsProdLike" : "false"},
          "test"      : { "IsProdLike" : "false"},
          "prod"      : { "IsProdLike" : "true" },
          "prod2"     : { "IsProdLike" : "true" },
          "beta"      : { "IsProdLike" : "true" },
          "qa"        : { "IsProdLike" : "true" }
        }
    },

    "Parameters": {

        "Environment": {
            "Description": "name of the environment (dev, test, qa, prod)",
            "Default": "dev",
            "Type": "String",
            "MinLength": "1",
            "MaxLength": "255"
        },
        "CloudFrontHost": {
            "Description": "Name of the CloudFront Distribution Host",
            "Type": "String",
            "MinLength": "1",
            "MaxLength": "255"
        },
        "ApiHost" : {
            "Description": "Dynamic site Fully Qualified Domain Name",
            "Type": "String",
            "MinLength": "1",
            "MaxLength": "255"
        },
        "StaticHost" : {
            "Description": "S3 Static site Fully Qualified Domain Name",
            "Type": "String",
            "MinLength": "1",
            "MaxLength": "255"
        },
        "Aliases" : {
            "Description": "Client CNAMES comma separated list for the Distribution",
            "Type": "CommaDelimitedList"
        },
        "R53HostedZoneName": {
            "Description": "Name of the R53 HostedZone[aip.local.]",
            "Type": "String",
            "MinLength": "1",
            "MaxLength": "255"
        },
        "R53HostedZoneID": {
            "Description": "R53 Zone ID",
            "Type": "String",
            "MinLength": "1",
            "MaxLength": "255"
        },
        "ServerCertificateId": {
            "Description": "IAM Certificate ID number",
            "Type": "String",
            "MinLength": "1",
            "MaxLength": "255"
        },
        "PriceClass": {
            "Description": "PriceClass - number of edges (performance) one is willing to pay for",
            "Type": "String",
            "Default": "PriceClass_All",
            "AllowedValues" : ["PriceClass_All", "PriceClass_200", "PriceClass_100"]
        }
    },


    "Conditions" : {
        "ProdLikeEnv" : {"Fn::Equals" : [
            {"Fn::FindInMap" : ["EnvMap", { "Ref" : "Environment" }, "IsProdLike" ]}, "true"]}
    },

    "Resources": {

        "AliniqbisCloudFrontDistribution": {
            "Type": "AWS::CloudFront::Distribution",
            "Properties": {
                "DistributionConfig": {
                    "Origins": [
                        {
                            "Id": { "Ref" : "ApiHost" },
                            "DomainName": { "Ref" : "ApiHost" },
                            "CustomOriginConfig": {
                                "HTTPPort": "80",
                                "HTTPSPort": "443",
                                "OriginProtocolPolicy": "https-only"
                            }
                        },
                        {
                            "Id": { "Ref" : "StaticHost" },
                            "DomainName": { "Ref" : "StaticHost" }, 
                            "CustomOriginConfig": {
                                "HTTPPort": "80",
                                "HTTPSPort": "443",
                                "OriginProtocolPolicy": "http-only"
                            }
                        }
                    ],
                    "Enabled" : "true",
                    "Comment" : { "Ref" : "CloudFrontHost" },
                    "DefaultRootObject" : "index.html",
                    "Logging" : {
                        "IncludeCookies" : "true",
                        "Bucket" : {"Fn::Join": ["", ["logs-", {"Ref" : "AWS::Region"}, "-", {"Ref" : "AWS::AccountId"}, ".s3.amazonaws.com"]]},
                        "Prefix" : {"Fn::Join": ["", ["cloudfront/", {"Ref": "Environment"} ]]}
                    },
                    "Aliases": {"Ref" : "Aliases"},
                    "CacheBehaviors" : [
                        {
                            "PathPattern" : "/api*",
                            "TargetOriginId" : { "Ref" : "ApiHost" },
                            "AllowedMethods" : [ "DELETE", "GET", "HEAD", "OPTIONS", "PATCH", "POST", "PUT" ],  
                            "CachedMethods"  : [ "HEAD", "GET" ],
                            "ForwardedValues" : {
                                "QueryString" : "true",
                                "Headers": [ "Authorization", "Host", "Aip-Cf-Secret" ],
                                "Cookies": { 
                                    "Forward": "whitelist",
                                    "WhitelistedNames": ["CloudFront-Key-Pair-Id", "CloudFront-Policy", "CloudFront-Signature"]
                                }
                            },
                            "ViewerProtocolPolicy" : "https-only",
                            "MinTTL": 0,
                            "MaxTTL": 0,
                            "DefaultTTL": 0
                        },
                        {
                            "TargetOriginId": { "Ref" : "StaticHost" },
                            "PathPattern": "/bi/help/*",
                            "ViewerProtocolPolicy": "https-only",
                            "AllowedMethods": [
                                "HEAD",
                                "GET"
                            ],
                            "CachedMethods": [
                                "HEAD",
                                "GET"
                            ],
                            "ForwardedValues" : {
                                "QueryString" : "false",
                                "Headers": [],
                                "Cookies": { "Forward": "none" }
                            },
                            "MinTTL": 0,
                            "MaxTTL": 31536000,
                            "DefaultTTL": 86400,
                            "TrustedSigners": ["self"]
                        },
                        {
                            "TargetOriginId": { "Ref" : "StaticHost" },
                            "PathPattern": "/admin/*",
                            "ViewerProtocolPolicy": "https-only",
                            "AllowedMethods": [
                                "HEAD",
                                "GET"
                            ],
                            "CachedMethods": [
                                "HEAD",
                                "GET"
                            ],
                            "ForwardedValues" : {
                                "QueryString" : "false",
                                "Headers": [],
                                "Cookies": { "Forward": "none" }
                            },
                            "MinTTL": 0,
                            "MaxTTL": 31536000,
                            "DefaultTTL": 86400,
                            "TrustedSigners": ["self"]
                        }
                    ],
                    "DefaultCacheBehavior": {
                        "TargetOriginId" : { "Ref" : "StaticHost" },
                        "SmoothStreaming" : "false",  
                        "ForwardedValues" : {
                            "QueryString" : "false",
                            "Cookies" : { "Forward" : "none" }
                        },
                        "ViewerProtocolPolicy": "redirect-to-https",
                        "AllowedMethods": [
                          "HEAD",
                          "GET"
                        ],
                        "CachedMethods": [
                          "HEAD",
                          "GET"
                        ],
                        "MinTTL": 0,
                        "MaxTTL": 31536000,
                        "DefaultTTL": 86400
                    },
                    "PriceClass" : { "Ref" : "PriceClass" },
                    "Restrictions" : {
                       "GeoRestriction" : {
                            "RestrictionType" : "none",
                            "Locations": []
                       }
                    },
                    "ViewerCertificate" : { 
                        "IamCertificateId" : { "Ref" : "ServerCertificateId" },
                        "SslSupportMethod": "sni-only",
                        "MinimumProtocolVersion": "TLSv1"
                    },
                    "WebACLId" : { "Ref": "WebACL" },
                    "CustomErrorResponses" : [
                        {
                            "ErrorCode" : "403",
                            "ResponsePagePath" : "/error/403.html",
                            "ResponseCode" : "403",
                            "ErrorCachingMinTTL" : "300"
                        },
                        {
                            "ErrorCode": "501",
                            "ResponsePagePath": "/error/501.html",
                            "ResponseCode": "501",
                            "ErrorCachingMinTTL": "300"
                        },
                        {
                            "ErrorCode": "502",
                            "ResponsePagePath": "/error/502.html",
                            "ResponseCode": "502",
                            "ErrorCachingMinTTL": "300"
                        },
                        {
                            "ErrorCode": "503",
                            "ResponsePagePath": "/error/503.html",
                            "ResponseCode": "503",
                            "ErrorCachingMinTTL": "300"
                        },
                        {
                            "ErrorCode": "504",
                            "ResponsePagePath": "/error/504.html",
                            "ResponseCode": "504",
                            "ErrorCachingMinTTL": "300"
                        }
                    ]
                }
            }
        },
        "AppR53EntryCloudFront" : {
            "Type" : "AWS::Route53::RecordSetGroup",
            "DependsOn" : "AliniqbisCloudFrontDistribution",
            "Properties" : {
                "HostedZoneName" : { "Ref": "R53HostedZoneName" },
                "Comment"   : "Assigning route 53 A record for ELB's DNS record.",

                "RecordSets" : [{
                    "Name"      : {"Ref" : "CloudFrontHost"}, 
                    "Type": "A", 
                    "AliasTarget" : {
                        "HostedZoneId" : { "Ref" : "R53HostedZoneID"},
                        "DNSName" : { "Fn::GetAtt": ["AliniqbisCloudFrontDistribution", "DomainName"]} 
                    }
                }]
            }
        },

        "WebACL": {
          "Type": "AWS::WAF::WebACL",
          "Properties": {
            "Name": {"Fn::Join": ["", ["aliniqbis-", {"Ref": "Environment"}, "-waf-", {"Ref": "AWS::Region"} ]]},
            "DefaultAction": {
                "Fn::If" : [ "ProdLikeEnv", 
                            {"Type" : "ALLOW"},  
                            {"Type" : "BLOCK"} ]
            },
            "MetricName" : "AbbottWebACL",
                "Rules": [
                  {
                    "Action" : {
                      "Type" : "ALLOW"
                    },
                    "Priority" : 1,
                    "RuleId" : { "Ref" : "AdminAccessRule" }
                  },
                  {
                    "Action" : {
                      "Type" : "ALLOW"
                    },
                    "Priority" : 2,
                    "RuleId" : { "Ref" : "AllowAbbottNetworkRule" }
                  },
                  {
                    "Action" : {
                      "Type" : "ALLOW"
                    },
                    "Priority" : 3,
                    "RuleId" : { "Ref" : "AllowAccessFromAdminVPCRule" }
                  }
                ]

          }      
        },


        "AdminAccessRule" : {
            "Type" : "AWS::WAF::Rule",
            "Properties" : {
                "MetricName" : "AdminAccess",
                "Name"       : "AdminAccess",
                "Predicates" : [ 
                    { 
                        "Type" : "IPMatch", 
                        "Negated" : "false",
                        "DataId" : {"Ref" : "IPSetAbbottNetworks"}  
                    },
                    { 
                        "Type" : "ByteMatch", 
                        "Negated" : "false",
                        "DataId" : {"Ref" : "AdminAccessByteMatchSet"}  
                    }
                ]
            }
        },
        "AllowAccessFromAdminVPCRule" : {
            "Type" : "AWS::WAF::Rule",
            "Properties" : {
                "MetricName" : "AllowAccessFromAdminVPC",
                "Name"       : "AllowAccessFromAdminVPC",
                "Predicates" : [ 
                    { 
                        "Type" : "IPMatch", 
                        "Negated" : "false",
                        "DataId" : {"Ref" : "IPSetAdminVPCNAT"}  
                    }
                ]
            }
        },
        "AllowAbbottNetworkRule" : {
            "Type" : "AWS::WAF::Rule",
            "Properties" : {
                "MetricName" : "AllowAccessFromAbbott",
                "Name"       : "AllowAccessFromAbbott",
                "Predicates" : [ 
                    { 
                        "Type" : "IPMatch", 
                        "Negated" : "false",
                        "DataId" : {"Ref" : "IPSetAbbottNetworks"} 
                    }
                ]
            }
        },

        "IPSetAbbottNetworks": {
            "Type" : "AWS::WAF::IPSet",
            "Properties" : {
                "Name"   : "AbbottNetwork",
                "IPSetDescriptors": [
                    {"Type":"IPV4", "Value":"130.36.0.0/16"}
                ]
            }
        },
        "IPSetPublicNetwork": {
            "Type" : "AWS::WAF::IPSet",
            "Properties" : {
                "Name"   : "PuclicNetwork",
                "IPSetDescriptors": [
                    {"Type":"IPV4", "Value":"130.36.0.0/16"}
                ]
            }
        },
        "IPSetAdminVPCNAT": {
            "Type" : "AWS::WAF::IPSet",
            "Properties" : {
                "Name"   : "AdminVPCNAT",
                "IPSetDescriptors": [
                    {"Type":"IPV4", "Value":"52.3.143.228/32"}
                ]
            }
        },
        "AdminAccessByteMatchSet": {
            "Type" : "AWS::WAF::ByteMatchSet",
            "Properties" : {
                "Name"   : "AdminPath",
                "ByteMatchTuples": [
                    {
                        "FieldToMatch" : {"Type": "URI"},
                        "PositionalConstraint" : "STARTS_WITH",
                        "TargetString" : "/admin",
                        "TextTransformation" : "NONE"
                    }
                ]

            }
        }
    },


    "Outputs": {
        "URL": {
          "Description": "URL of the CloudFront Distribution",
          "Value": { "Fn::GetAtt": ["AliniqbisCloudFrontDistribution", "DomainName"] }
        },
        "CondTestOut": {
            "Description": "IsProdLike",
            "Value": { "Fn::If" : [ "ProdLikeEnv", 
                            "ALLOW",  
                            "BLOCK" ]}
        }
    }
}