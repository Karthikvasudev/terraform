{
	"AWSTemplateFormatVersion": "2010-09-09",

	"Description": "Archival bucket creation",

	"Parameters": {
		"RetentionPeriod": {
			"Description": "Static Web app name ex. static-devops-us1",
			"MinValue": "1",
			"MaxValue": "90",
			"Type": "Number"

		}
	},
	"Resources": {
		"Archival": {
			"Type": "AWS::S3::Bucket",
			"Properties": {
				"BucketName": {
					"Fn::Join": ["", ["aip-s3-archive-", {
						"Ref": "AWS::Region"
					}, "-", {
						"Ref": "AWS::AccountId"
					}]]
				},
				"LifecycleConfiguration": {
					"Rules": [{
						"Status": "Enabled",
						"ExpirationInDays": {
							"Ref": "RetentionPeriod"
						}
					}]
				}
			}
		}
	}
}
