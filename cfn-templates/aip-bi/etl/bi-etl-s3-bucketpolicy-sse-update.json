{
    "AWSTemplateFormatVersion" : "2010-09-09",

        "Description" : "AWS CloudFormation Template S3 Buclet policy for SSE",

	    "Parameters" : {
	            "bucketname" : {
		              "Type" : "String",
			                "Description" : "test"          
					        }
						    },

						        "Resources" : {
							        
								        "mybucketpolicy" : {
									           "Type" : "AWS::S3::BucketPolicy",
										              "Properties" : {
											      		   "Bucket" : { "Ref" : "bucketname" },
													                 "PolicyDocument" : {
															                  "Id" : "MyPolicy",
																	                   "Statement": [
																			   					{
																													"Sid": "Stmt1454944999133",
																																		"Effect": "Deny",
																																							"Principal": "*",
																																												"Action": "s3:PutObject",
																																																	"Resource":{
																																																							"Fn::Join": ["", ["arn:aws:s3:::", { "Ref": "bucketname" }, "/*" ]]				
																																																												},
																																																																	"Condition": {
																																																																						"StringNotEquals": {
																																																																												"s3:x-amz-server-side-encryption": "AES256"
																																																																																		}
																																																																																							}
																																																																																											}
																																																																																														]
																																																																																														        }
																																																																																															              }
																																																																																																              }


																																																																																																	          }
																																																																																																		  } 
