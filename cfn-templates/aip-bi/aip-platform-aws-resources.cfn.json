    },
	"ddblogs": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "AttributeDefinitions": [
          {
            "AttributeName": "Id",
            "AttributeType": "S"
          },
		  {
            "AttributeName": "TenantId",
            "AttributeType": "S"
          },
		  {
            "AttributeName": "ModifiedOn",
            "AttributeType": "N"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "Id",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": "3",
          "WriteCapacityUnits": "1"
        },
        "TableName": { "Fn::Join": ["", ["aip-", { "Ref": "Environment" }, "-ddb-lislog"]] },
		"GlobalSecondaryIndexes": [
          {
            "IndexName": "tenant-index",
            "KeySchema": [
              {
                "AttributeName": "TenantId",
                "KeyType": "HASH"
              },
			  {
                "AttributeName": "ModifiedOn",
                "KeyType": "RANGE"
              }
            ],
            "Projection": {
              "ProjectionType": "ALL"
            },
            "ProvisionedThroughput": {
              "ReadCapacityUnits": "1",
              "WriteCapacityUnits": "1"
            }
          }
        ]
      }
    },
    "ddborganization": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "AttributeDefinitions": [
          {
            "AttributeName": "TenantId",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "TenantId",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": "3",
          "WriteCapacityUnits": "1"
        },
        "TableName": { "Fn::Join": ["", ["aip-", { "Ref": "Environment" }, "-ddb-organization"]] }
      }
    },
    "ddbaccount": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "AttributeDefinitions": [
          {
            "AttributeName": "accountId",
            "AttributeType": "S"
          },
          {
            "AttributeName": "tenantId",
            "AttributeType": "S"
          },
          {
            "AttributeName": "emailAddress",
            "AttributeType": "S"
          },
		  {
            "AttributeName": "accountStatus",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "accountId",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": "3",
          "WriteCapacityUnits": "1"
        },
        "TableName": { "Fn::Join": ["", ["aip-", { "Ref": "Environment" }, "-ddb-account"]] },
		"GlobalSecondaryIndexes": [
          {
            "IndexName": "emailAddress-index",
            "KeySchema": [
              {
                "AttributeName": "emailAddress",
                "KeyType": "HASH"
              }
            ],
            "Projection": {
              "ProjectionType": "ALL"
            },
            "ProvisionedThroughput": {
              "ReadCapacityUnits": "1",
              "WriteCapacityUnits": "1"
            }
          },
		  {
            "IndexName": "tenant-index",
            "KeySchema": [
              {
                "AttributeName": "tenantId",
                "KeyType": "HASH"
              },
			  {
                "AttributeName": "emailAddress",
                "KeyType": "RANGE"
              }
            ],
            "Projection": {
              "ProjectionType": "ALL"
            },
            "ProvisionedThroughput": {
              "ReadCapacityUnits": "1",
              "WriteCapacityUnits": "1"
            }
          },
		  {
            "IndexName": "accountStatus-index",
            "KeySchema": [
              {
                "AttributeName": "accountId",
                "KeyType": "HASH"
              },
			  {
                "AttributeName": "accountStatus",
                "KeyType": "RANGE"
              }
            ],
            "Projection": {
              "ProjectionType": "ALL"
            },
            "ProvisionedThroughput": {
              "ReadCapacityUnits": "1",
              "WriteCapacityUnits": "1"
            }
          }
        ]
      }
    },
	"snsappcreated": {
      "Type": "AWS::SNS::Topic",
