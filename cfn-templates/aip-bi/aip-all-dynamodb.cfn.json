      "Properties": {
        "TopicName": { "Fn::Join": ["", ["aip-", { "Ref": "Environment" }, "-sns-account-deactivated"]] }
      }
    },      
    "snsaccountlocked": {
      "Type": "AWS::SNS::Topic",
      "Properties": {
